<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_search_items_drawer"
    tools:context="in.commoncart.android.SearchItemsActivity">

    <ListView android:id="@+id/activity_search_items_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        />

    <ScrollView
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:background="@color/grey_0"
            android:orientation="vertical">

            <TextView android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subcategories:"
                style="@style/TextAppearance.AppCompat.Button"
                android:textSize="14sp"
                android:textColor="@color/grey_500"/>

            <ExpandableListView android:id="@+id/activity_search_items_filter_subcategories_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"/>

            <TextView android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min. price (Rs.0)"
                style="@style/TextAppearance.AppCompat.Button"
                android:textSize="14sp"
                android:textColor="@color/grey_500"/>

            <SeekBar android:id="@+id/search_items_min_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:progressDrawable="@drawable/material_seekbar_progress"
                android:thumb="@drawable/material_seekbar_thumb"
                android:minHeight="4dip"
                android:maxHeight="4dip" />

            <TextView android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max. price (Rs.100)"
                style="@style/TextAppearance.AppCompat.Button"
                android:textSize="14sp"
                android:textColor="@color/grey_500"/>

            <SeekBar android:id="@+id/search_items_max_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:progressDrawable="@drawable/material_seekbar_progress"
                android:thumb="@drawable/material_seekbar_thumb"
                android:minHeight="4dip"
                android:maxHeight="4dip" />

            <TextView android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brands:"
                style="@style/TextAppearance.AppCompat.Button"
                android:textSize="14sp"
                android:textColor="@color/grey_500"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Select all"/>

                <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Deselect all"/>

            </LinearLayout>

            <ExpandableListView android:id="@+id/activity_search_items_filter_brand_listview"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:divider="@android:color/transparent"
                android:layout_margin="4dp"/>

            <TextView android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stores:"
                style="@style/TextAppearance.AppCompat.Button"
                android:textSize="14sp"
                android:textColor="@color/grey_500"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Select all"/>

                <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Deselect all"/>

            </LinearLayout>

            <ExpandableListView android:id="@+id/activity_search_items_filter_store_listview"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:divider="@android:color/transparent"
                android:layout_margin="4dp"/>


        </LinearLayout>

    </ScrollView>


</android.support.v4.widget.DrawerLayout>
