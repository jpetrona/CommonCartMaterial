<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/navigation_header"
    android:background="@color/colorAccent"
    android:layout_margin="0dp"
    android:paddingBottom="4dp">

        <ImageView android:id="@+id/navigation_header_avatar_iamgeview"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/navigation_header_user_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Name"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/grey_0" />

            <TextView
                android:id="@+id/navigation_header_user_status"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="email@domain.com"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-regular"
                android:textColor="@color/grey_0" />

        </LinearLayout>


    </LinearLayout>
        

</LinearLayout>
