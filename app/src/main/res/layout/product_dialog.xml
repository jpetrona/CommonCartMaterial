<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_900">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/product_dialog_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/test_product_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/product_dialog_imageview"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView android:id="@+id/product_dialog_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/grey_0"
                android:text="Product Name"/>

            <TextView android:id="@+id/product_dialog_price_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/grey_500"
                android:text="48 Rs."/>

            <TextView android:id="@+id/product_dialog_description_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/grey_600"
                android:text="This is a description of this cool mouse. Tired of boring, white, office mouses? Buy this cool one!"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:text="@string/product_dialog_button_compare_price"
                    android:textColor="@color/grey_500"
                    android:layout_gravity="bottom"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:text="@string/product_dialog_button_visit_store"
                    android:textColor="@color/grey_500"
                    android:layout_gravity="bottom"/>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</ScrollView>