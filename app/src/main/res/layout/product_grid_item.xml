<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/grey_0">

    <ImageView android:id="@+id/product_list_item_imageview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:maxHeight="140dp"
        android:src="@drawable/test_product_image"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <LinearLayout android:id="@+id/product_list_item_text_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView android:id="@+id/product_list_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:maxWidth="140dp"
            android:maxLines="2"
            android:text="Cool blue and grey Logitech mouse 2015 edition"/>

        <TextView android:id="@+id/product_list_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set of 1, Blue-White"
            android:textColor="@color/grey_600"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView android:id="@+id/product_list_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/red_500"
                android:text="Rs.300"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_favorite_border_black_24dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>